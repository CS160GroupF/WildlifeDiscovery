<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Encounter"
        android:id="@+id/new_encounter"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Encounters"
        android:id="@+id/all_encounters"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/new_encounter"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Notifications"
        android:id="@+id/notification"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/all_encounters"
        android:layout_gravity="center_horizontal" />

</LinearLayout>